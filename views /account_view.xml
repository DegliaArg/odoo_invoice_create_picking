<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_create_picking" model="ir.ui.view">
        <field name="name">account.move.form.create.picking</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Insertamos el botÃ³n en el header -->
            <xpath expr="//sheet/header" position="inside">
                <button
                    name="create_picking"
                    string="Crear Remito"
                    type="object"
                    class="oe_highlight"
                    attrs="{
                        'invisible': [
                            ('move_type', '!=', 'out_invoice'),
                            ('picking_id', '!=', False)
                        ]
                    }"
                />
            </xpath>

            <!-- Agregamos el campo picking_id debajo de invoice_origin -->
            <xpath expr="//field[@name='invoice_origin']" position="after">
                <field name="picking_id" readonly="1"/>
            </xpath>

        </field>
    </record>

</odoo>
